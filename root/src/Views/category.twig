{% extends "base.twig" %}

{% block title %}Kategorien - {% endblock %}

{% block mainContent %}
    {% if loggedIn %}
        <h1>Kategorien</h1>
        <p>Hier sind alle Kategorien nach welchen Artikel kategorisiert werden k√∂nnen.</p>
        <a class="button" href="/category/create">Neue Kategorie anlegen</a>
        <div class="categories flex-20">
            {% for category in categories %}
                <a class="category" href="/category/detail?name={{ category.name }}">
                    <img src="{{ category.icon }}" alt="{{ category.name }}">
                    <h3>{{ category.name }}</h3>
                </a>
            {% endfor %}
        </div>
    {% else %}
        {{ _self.notLoggedIn() }}
    {% endif %}
{% endblock %}